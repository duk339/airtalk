<h1>投稿一覧</h1>

<%= @posts.each do |post| %>
  <h4>タイトル</h4>
 <%= link_to post_path(post.id) do %>
     <p><%= post.title %></p>
    <% end %>

  <% if post.image.attached? %>
  <h4>画像</h4>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.image %>
    <% end %>
  <% end %>
  <h4>航空会社名</h4>
  <p><%= post.airline %></p>
  <h4>本文</h4>
  <%= link_to post_path(post.id) do %>
  <p><%= post.body %></p>
    <% end %>
  <h4>投稿日時</h4>
  <%= post.created_at.strftime('%Y/%m/%d') %>
  <h4>投稿ユーザー</h4>
  <p><%= post.user.name %></p>

<% end %>