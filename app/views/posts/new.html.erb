<h1>新規投稿</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>航空会社名</h4>
  <%= f.text_field :airline %>
  <h4>本文</h4>
  <%= f.text_area :body %><br>
  <%= f.submit '投稿' %>


<% end %>